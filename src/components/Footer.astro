---
const quotes = [
    {
        quote: "Pulvis et umbra sumus",
        meaning: "We are but dust and shadow",
    },
    {
        quote: "Omnis vir lupus",
        meaning: "Every man is a wolf",
    },
    {
        quote: "Per aspera ad astra",
        meaning: "Through hardship to the stars",
    },
    {
        quote: "Hic sunt leones",
        meaning: "Here are lions",
    },
]

const now = new Date();
const startOfYear = new Date(now.getFullYear(), 0, 0);

const diff = now.getTime() - startOfYear.getTime();

const oneDay = 1000 * 60 * 60 * 24;
const dayOfYear = Math.floor(diff / oneDay);

const quoteIndex = dayOfYear % quotes.length;

const quoteOfTheDay = quotes[quoteIndex];
